   <PasswordField fx:id="pwd" GridPane.columnIndex="1" GridPane.rowIndex="2" />

   <Button fx:id="okButton" onAction="#okClicked" text="OK" GridPane.columnIndex="0"  GridPane.rowIndex="4" />

